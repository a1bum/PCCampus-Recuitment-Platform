<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.a1bum.dao.CompanyMapper">
	<insert id="addCompany" parameterType="com.a1bum.entity.Company">
		INSERT INTO company_info
		VALUES(#{company_id},#{company_name}),#{company_official},#{company_employment}
	</insert>
	<select id="getAll" resultType="com.a1bum.entity.Company">
		SELECT * FROM company_info;
	</select>
	<select id="getByCompanyName"
		resultType="com.a1bum.entity.Company">
		SELECT * FROM company_info WHERE
		company_name=#{company_name};
	</select>
	<select id="getByKeyword" resultType="com.a1bum.entity.Company">
		SELECT * FROM company_info
		WHERE
		city LIKE CONCAT('%',#{0},'%')
		OR
		university_name LIKE
		CONCAT('%',#{0},'%')
		OR
		department LIKE CONCAT('%',#{0},'%')
	</select>
</mapper>