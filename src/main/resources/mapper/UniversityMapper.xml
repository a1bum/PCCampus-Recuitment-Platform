<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.a1bum.dao.UniversityMapper">
	<select id="getByUniversityName" resultType="top.a1bum.entity.University">
		SELECT * FROM university_info where university_name=#{university_name};
	</select>
	<select id="getAll" resultType="top.a1bum.entity.University">
		select * from university_info;
	</select>
	<select id="getByKeyword" resultType="top.a1bum.entity.University">
		select * from university_info 
		where 
		city like concat('%',#{0},'%')
		or
		university_name like concat('%',#{0},'%')
		or 
		department like concat('%',#{0},'%')
	</select>
</mapper>